{{ 'cart-cta.css' | asset_url | stylesheet_tag }}
<div class="cart-cta__container" style=" background-color: {{ section.settings.bg_color }}">
    {% if cart != empty %}
    <div class="cart-cta__inner-container">
        {%- for block in section.blocks -%}
        <ul class="cart-cta__block-ul">
            <div class="cart-cta__content">
                <h3 class="cart-cta__title">
                    {{ block.settings.heading }}
                </h3>
                <li class="cart-cta__text" style=" color: {{ block.settings.text_color }}">
                    {{ block.settings.subtext }}
                </li>
            </div>
        </ul>
        {%- endfor -%}
        {%- if section.settings.payment_enable -%}
        <ul class="cart-cta__flags-ul" role="list">
            {%- for type in shop.enabled_payment_types -%}
            <li class="cart-cta__flags-li">
                {{ type | payment_type_svg_tag: class: '' }}
            </li>
            {%- endfor -%}
        </ul>
        {%- endif -%}
    </div>
    {% endif %}
</div>
    

  {% schema %}
  {
    "name": "Cart call to action",
    "blocks": [
      {
        "type": "text",
        "name": "t:sections.footer.blocks.text.name",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "t:sections.footer.blocks.text.settings.heading.label"
          },
          {
            "type": "richtext",
            "id": "subtext",
            "default": "<p>Share store details, promotions, or brand content with your customers.</p>",
            "label": "t:sections.footer.blocks.text.settings.subtext.label"
          },
          {
            "type": "color",
            "id": "text_color",
            "default": "#FFFFFF",
            "label": "Background color"
          }
        ]
      }
    ],
    "settings": [
      {
        "type": "checkbox",
        "id": "payment_enable",
        "default": true,
        "label": "t:sections.footer.settings.payment_enable.label"
      },
      {
        "type": "color",
        "id": "bg_color",
        "default": "#FFFFFF",
        "label": "Background color"
      }
    ],
    "presets": [
      {
        "name": "Cart call to action",
        "blocks": [
            {
              "type": "text"
            }
          ]
      }
    ]
  }
  {% endschema %}